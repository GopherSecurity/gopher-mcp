<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Clear existing package sources to ensure consistent builds -->
    <clear />
    
    <!-- Default NuGet.org package source -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    
    <!-- Local package source for testing -->
    <add key="local" value="./nupkg" />
  </packageSources>
  
  <!-- Package source mappings for security -->
  <packageSourceMapping>
    <!-- Map all packages to nuget.org by default -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
    
    <!-- Map GopherMcp packages to local source for development -->
    <packageSource key="local">
      <package pattern="GopherMcp*" />
    </packageSource>
  </packageSourceMapping>
  
  <!-- Package management settings -->
  <packageManagement>
    <!-- Use PackageReference format for all projects -->
    <add key="format" value="1" />
    <!-- Default package management format -->
    <add key="disabled" value="False" />
  </packageManagement>
  
  <!-- Package restore settings -->
  <packageRestore>
    <!-- Enable automatic package restore -->
    <add key="enabled" value="True" />
    <!-- Check for missing packages during build -->
    <add key="automatic" value="True" />
  </packageRestore>
  
  <!-- Configuration section for solution-specific settings -->
  <config>
    <!-- Set the default package installation target framework -->
    <add key="defaultPushSource" value="local" />
    <!-- Global packages folder location -->
    <add key="globalPackagesFolder" value=".packages" />
  </config>
</configuration>